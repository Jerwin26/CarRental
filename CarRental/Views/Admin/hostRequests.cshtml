@model IEnumerable<CarRental.Models.NewHostModel>

@{
    ViewBag.Title = "hostRequests";
    Layout = "~/Views/Admin/adminLayout.cshtml";
}

<style>
    .card-body {
        width: 40%;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<h2 style="text-align:center">New host requests</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.firstName) @Html.DisplayFor(modelItem => item.lastName)</h5>
                    <p class="card-text">Host Id: @Html.DisplayFor(modelItem => item.customerId)</p>
                    <p class="card-text">Date of dirth: @Html.DisplayFor(modelItem => item.dateOfBirth)</p>
                    <p class="card-text">Gender: @Html.DisplayFor(modelItem => item.gender)</p>
                    <p class="card-text">Phone number: @Html.DisplayFor(modelItem => item.phoneNumber)</p>
                    <p class="card-text">Email: @Html.DisplayFor(modelItem => item.emailAddress)</p>
                    <p class="card-text">Address: @Html.DisplayFor(modelItem => item.Address)</p>
                    <p class="card-text">State: @Html.DisplayFor(modelItem => item.state)</p>
                    <p class="card-text">City: @Html.DisplayFor(modelItem => item.city)</p>
                    <p class="card-text">Username: @Html.DisplayFor(modelItem => item.username)</p>
                    <p class="card-text">Password: @Html.DisplayFor(modelItem => item.password)</p>
                    @*<p class="card-text">Confirm Password: @Html.DisplayFor(modelItem => item.ConfirmPassword)</p>*@
                    <div class="d-flex justify-content-between mt-3">
                        <a href="@Url.Action("Updatetohostbyadmin", new { id = item.customerId })" class="btn btn-success">Accept</a>
                        <a href="@Url.Action("RejectHostRequest", new { id = item.customerId })" class="btn btn-danger">Reject</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
