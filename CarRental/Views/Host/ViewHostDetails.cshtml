@model IEnumerable<CarRental.Models.HostModel>

@{
    ViewBag.Title = "ViewHostDetails";
    Layout = "~/Views/Admin/adminLayout.cshtml";
}

@*<h2>View Host Details</h2>*@

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of birth</th>
                <th>Gender</th>
                <th>Phone number</th>
                <th>Email address</th>
                <th>Address</th>
                @*<th>State</th>
                <th>City</th>*@
                <th>Username</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.firstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.lastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.dateOfBirth)</td>
                    <td>@Html.DisplayFor(modelItem => item.gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.phoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.emailAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.state)</td>
                    <td>@Html.DisplayFor(modelItem => item.city)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.username)</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Make customer", "PromoteHostToCustomerByAdmin", new { id = item.customerId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Delete host", "DeleteHost", new { id = item.customerId }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
