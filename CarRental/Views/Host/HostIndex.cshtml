@model CarRental.Models.HostModel

@{
    var userName = Session["userName"] as string;
}

@{
    ViewBag.Title = "HostIndex";
    Layout = "~/Views/Host/HostLayout.cshtml";
}
<style>

    .hostindex {
        margin-top: 4%;
        margin-bottom: 3%;
    }
</style>
<h2 style="margin-top:5%; text-align:center">Welcome, @userName!</h2>
<div class="hostindex">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">

                <p>
                    Thank you for choosing CarRental. You're now logged in as a host.
                    Here, you can add your vehicle listings and see the Vehicle status.
                </p>
                <p>
                    If you have any questions or need assistance, please feel free to
                    <a href="mailto:support@carrental.com">contact our support team</a>.
                </p>
            </div>
            <div class="col-md-6">
                <img src="~/Image/logo/carrental image/background.jpg" class="img-fluid" alt="CarRental Image">
            </div>
        </div>
    </div>
</div>
