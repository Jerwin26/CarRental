@model IEnumerable<CarRental.Models.HostVehicleApprovalModel>

@{
    ViewBag.Title = "HostStatusById";
    Layout = "~/Views/Host/HostLayout.cshtml";
}
<style>
    body {
        background-image: url('../../image/logo/carrental image/backgro.jpeg');
    }
    .status-container {
        margin-top: 3%;
        margin-bottom: 24%;
    }
    .text-center{
        margin-top:2%;
    }

    .table th,
    .table td {
        background:#fff;
        text-align: center;
        vertical-align: middle;
    }
</style>
<h2 class="text-center">Vehicle status</h2>
<div class="status-container">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Vehicle id</th>
                            <th>Host id</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Brand</th>
                            <th>Fuel type</th>
                            <th>License plate</th>
                            <th>Vehicle price</th>
                            <th>Vehicle approval status</th>
                            <th>Vehicle status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.HostingVehicleApprovalStatus == "1" ? "table-warning" :

                                     item.VehicleStatus == "2" ? "table-danger" :
                                     item.VehicleStatus == "0" ? "table-success" : "")">
                                <td>@Html.DisplayFor(modelItem => item.VehicleID)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                                <td>@Html.DisplayFor(modelItem => item.FuelType)</td>
                                <td>@Html.DisplayFor(modelItem => item.LicensePlate)</td>
                                <td>@Html.DisplayFor(modelItem => item.VehiclePrice)</td>
                                <td>
                                    @if (item.HostingVehicleApprovalStatus == "0")
                                    {
                                        <span class="text-dark">Waiting for Admin Approval</span>
                                    }
                                    else if (item.HostingVehicleApprovalStatus == "1")
                                    {
                                        <span class="text-success">Approved</span>
                                    }
                                    else if (item.HostingVehicleApprovalStatus == "2")
                                    {
                                        <span class="text-danger">Rejected by Admin</span>
                                    }
                                </td>


                                <td>
                                    @if (item.VehicleStatus == "0")
                                    {
                                        <span class="text-success">Accepted</span>
                                    }
                                    else if (item.VehicleStatus == "1")
                                    {
                                        <span class="text-info">Booked by Customer</span>
                                    }
                                    else if (item.VehicleStatus == "2")
                                    {
                                        <span class="text-danger">Waiting for Admin Approval</span>
                                    }
                                    else if (item.VehicleStatus == "3")
                                    {
                                        <span class="text-danger">Rejected</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
