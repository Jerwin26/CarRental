@model IEnumerable<CarRental.Models.HostVehicleApprovalModel>

@{
    ViewBag.Title = "HostVehiclesApprovalAdmin";
    Layout = "~/Views/Admin/adminLayout.cshtml";
}

<h2 style="text-align:center">Host vehicles approval</h2>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="row row-cols-1 row-cols-md-3">
    @foreach (var item in Model)
    {
        <div class="col mb-3">
            <div class="card h-100">
                <img src="data:image/jpeg;base64,@(item.VehicleImage != null ? Convert.ToBase64String(item.VehicleImage) : "")" class="card-img-top" alt="Vehicle Image">
                <div class="card-body">
                    @*<h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>*@
                    <table class="table table-bordered">
                        <tr>
                            <td><strong>Host name:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                        </tr>
                        <tr>
                            <td><strong>Vehicle id:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.VehicleID)</td>
                        </tr>
                        <tr>
                            <td><strong>Host id:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
                        </tr>
                        <tr>
                            <td><strong>Brand:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                        </tr>
                        <tr>
                            <td><strong>Fuel type:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.FuelType)</td>
                        </tr>
                        <tr>
                            <td><strong>License plate:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.LicensePlate)</td>
                        </tr>
                        @*<tr>
                            <td><strong>Approval status:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.HostingVehicleApprovalStatus)</td>
                        </tr>*@
                        <tr>
                            <td><strong>Vehicle price:</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.VehiclePrice)</td>
                        </tr>
                    </table>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Accept", "AcceptHostVehicleRequest", new { id = item.VehicleID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Reject", "RejectHostVehicleRequest", new { id = item.VehicleID }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
