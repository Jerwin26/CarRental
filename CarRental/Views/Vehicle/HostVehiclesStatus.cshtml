@model IEnumerable<CarRental.Models.HostVehicleApprovalModel>

@{
    ViewBag.Title = "HostVehiclesStatus";
    Layout = "~/Views/Host/HostLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<h2>Host Vehicles Status</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@item.FirstName @item.LastName</h5>
                <p class="card-text">Brand: @item.Brand</p>
                <p class="card-text">Fuel Type: @item.FuelType</p>
                <p class="card-text">License Plate: @item.LicensePlate</p>
                <p class="card-text">Vehicle Price: @item.VehiclePrice</p>
                <p class="card-text">Vehicle Status: @item.VehicleStatus</p>
                <p class="card-text">Vehicle Approval Status: @item.HostingVehicleApprovalStatus</p>
                @if (item.HostingVehicleApprovalStatus.ToString() == "1" || item.VehicleStatus.ToString() == "2")
                {
                    <p class="card-text text-warning">Waiting for Admin Approval</p>
                }
                @*<div class="btn-group" role="group">
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-danger" })
                </div>*@
            </div>
        </div>
    }
</div>
