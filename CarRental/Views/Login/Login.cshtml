@model CarRental.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Home/HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="~/Style/LoginStyleSheet.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="logincontainer">
        <h2>Login</h2>

        <div class="loginform">
            <form method="post">
                @Html.AntiForgeryToken()
                <div class="loginlogo">
                    <img src="~/Image/logo/logo (2).png" id="loginlogo" />
                </div>

                <div class="form-group">
                    <label for="Username">Username</label>
                    @Html.TextBoxFor(model => model.username, new { @class = "form-control", placeholder = "Enter your username", required = "required" })
                    <div class="text-danger" id="usernameValidationMessage"></div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Enter your password", required = "required" })
                    <div class="text-danger" id="passwordValidationMessage"></div>
                </div>


                <button type="submit" class="btn btn-success btn-block">Login</button>

                <div class="text-danger">@ViewBag.Message</div>

                <span style="color: black;">Don't you have an account?</span>
                <a href="https://localhost:44391/Customer/InsertCustomer" style="color: blue; text-decoration: none; margin-left: 5px;">Register</a>
            </form>
        </div>
    </div>
